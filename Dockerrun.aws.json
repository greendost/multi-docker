{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "greendost/multi-client",
      "hostname": "client",
      "essential": false
    },
    { 
      "name": "server",
      "image": "greendost/multi-server",
      "hostname": "api",
      "essential": false
    },
    { 
      "name": "worker",
      "image": "greendost/multi-worker",
      "hostname": "worker",
      "essential": false
    },
    { 
      "name": "nginx",
      "image": "greendost/multi-nginx",
      "essential": true,
      "portMappings": [
	{ 
	  "hostPort": 80,
	  "containerPort": 80
	}
      ],
      "links": ["client", "server"] 
    }
  ]
}
